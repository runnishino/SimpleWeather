<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.run.demo.simpleweather.MainActivity">

    <!--天气详细-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_main">

        <!--时间/地点信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--刷新按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp">

                <ImageView
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_refresh" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="刷新"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_standard_size" />

            </LinearLayout>

            <!--城市/更新时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上海"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_large_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/color_white" />

            </LinearLayout>

            <!--农历/星期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text="农历九月十八/周三"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_standard_size" />

            </LinearLayout>


        </LinearLayout>

        <!--天气信息-->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:paddingTop="10dp"
                android:src="@mipmap/sun"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="@dimen/font_jumbo_size"
                android:textColor="@color/color_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18°"/>

            <TextView
                android:textSize="@dimen/font_medium_size"
                android:textColor="@color/color_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多云"/>

        </LinearLayout>

        <!--风力信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="15dp"
                android:textSize="@dimen/font_standard_size"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="风向|东南风"/>

            <TextView
                android:layout_marginBottom="15dp"
                android:textSize="@dimen/font_standard_size"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="风力|3级"/>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>
